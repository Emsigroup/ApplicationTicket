

<hibernate-configuration>
    <session-factory>
        <!-- Connexion MySQL -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/applicationticket</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>

        <!-- Dialecte SQL -->
<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>

        <!-- Afficher SQL -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- CrÃ©ation automatique des tables -->
        <property name="hibernate.hbm2ddl.auto">update</property>

           <!-- Mapping des classes -->
        <!-- MAPPING UTILISATEUR -->
        <mapping class="model.Utilisateur"/>
        <!-- MAPPING ADMIN -->
        <mapping class="model.Admin"/>
        <!-- MAPPING CLIENT -->
        <mapping class="model.Client"/>
        <!-- MAPPING TECHNICIEN -->
        <mapping class="model.Technicien"/>
        <!-- MAPPING TICKET -->
        <mapping class="model.Ticket"/>
        <!-- MAPPING RAPPORT -->
        <mapping class="model.Rapport"/>
    </session-factory>
</hibernate-configuration>
